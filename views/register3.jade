extends layout 

block content
	.container
		h2.page-header Register
		p Please register using the form below
		
		if errors
			each error, i in errors
				div.alert.alert-danger #{error.msg}
				
		form(method='post', action='/users/register', enctype="multipart/form-data")
			.form-group
				label Name
				input.form-control.col-md-4(name="name", type="text", placeholder="Enter your name here")
			.form-group
				label Email
				input.form-control.col-md-4(name="email", type="email", placeholder="Enter your email here")
			.form-group
				label Username
				input.form-control.col-md-4(name="username", type="text", placeholder="Enter Username") 
			.form-group
				label Password
				input.form-control.col-md-4(name="password", type="password", placeholder="Enter password")
			.form-group
				label Confirm Password
				input.form-control.col-md-4(name="password2", type="password", placeholder="Confirm password")
			.form-group
				label Profile Image
				input.form-control.col-md-4(name="profileimage", type="file")
			input.btn.btn-primary(type='submit', name='submit', value='Register')